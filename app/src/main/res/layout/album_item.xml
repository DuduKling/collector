<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewAlbumBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:contentDescription="@string/albumbg"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAlbum"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAlbum"
        app:layout_constraintStart_toStartOf="@+id/imageViewAlbum"
        app:layout_constraintTop_toTopOf="@+id/imageViewAlbum" />

    <ImageView
        android:id="@+id/imageViewAlbum"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/albumImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/avatar_leaf" />

</android.support.constraint.ConstraintLayout>